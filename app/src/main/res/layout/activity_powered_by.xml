<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.tioliaapp.android.tioliamovies.PoweredByActivity">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:src="@drawable/powered_by_title"
        android:layout_above="@+id/iv_powered_by"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_powered_by"
        android:layout_width="@dimen/powered_by_height_and_width"
        android:layout_height="@dimen/powered_by_height_and_width"
        android:layout_gravity="center"
        android:src="@drawable/powered_by"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginBottom="@dimen/margin_bottom" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        style="@style/LinearProgress"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_height="4dp"
        android:layout_below="@+id/iv_powered_by"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:theme="@style/LinearProgress"
        android:visibility="visible" />

</RelativeLayout>
